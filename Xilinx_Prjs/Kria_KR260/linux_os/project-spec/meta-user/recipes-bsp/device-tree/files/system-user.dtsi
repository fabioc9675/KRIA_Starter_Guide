/include/ "system-conf.dtsi"
/ {
};
&spi0{
    status = "okay";
    spidev@0x00 {
        status = "okay";
        // compatible = "spidev";
        // compatible = "rohm, dh2228fv";
        compatible = "lwn,bk4";
        spi-max-frequency = <25000000>;
        reg = <0>;
    };
};
&spi1{
    status = "okay";
    spi-slave;
    slave {
        compatible = "spi-slave-time";
    };
};
